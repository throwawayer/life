*
  box-sizing border-box
  outline none

main
#main
  display block

html
  -webkit-font-smoothing antialiased

body
  margin 0
  background $body-background
  background-size 800% 800%
  font-family $font
  font-size $font-size
  line-height $line-height
  color $body-color
  overflow-x hidden

a
  cursor pointer
  color $body-color
  text-decoration none !important

h1
  margin 0
  font-size 40px
  line-height 40px

h2
  margin 0
  font-size 32px
  line-height 32px

h3
  margin 0
  font-size 28px
  line-height 28px

h4
  margin 0
  font-size 20px
  line-height 20px

h5
  margin 0
  font-size 16px
  line-height 16px

h6
  margin 0
  font-size 12px
  line-height 12px

hr
  display block
  margin 32px 0
  margin-block 32px
  margin-inline auto
  overflow hidden
  border-style solid
  border-width 1px
  border-color #bfbfbf

ul
  list-style none
  margin-block 0
  margin-inline 0
  padding-inline 0
  overflow hidden
