$font = 'Roboto', sans-serif
$font-size = 16px
$line-height = 20px
$nominal-left-col-width = 450px
$factual-left-col-width = 424px
$page-container-horizontal-padding = 24px

$white = #FFFFFF

$btn-bg-color-primary = #771d00
$btn-border-color-primary = #fb8b00
$btn-bg-color-secondary = #006177
$btn-border-color-secondary = #d4fb00

$body-background = linear-gradient(90deg, #0a0617, #ff6d18)
$body-color = #cbb8cc

.bar
  display inline-block
  vertical-align middle
  width 100%
  height 24px
  padding 0
  margin 0
  border none
  background $btn-bg-color-primary
  opacity 0.7
  transition opacity .2s
  appearance none

  &:hover
    opacity 1
